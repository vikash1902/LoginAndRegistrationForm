<tiles-definitions>
	<definition name="layout"
		template="/WEB-INF/view/welcome.jsp">
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="header"
			value="/WEB-INF/tiles/header.jsp" />
		<!-- <put-attribute name="body" value="" /> -->
