			value="/WEB-INF/view/registration.jsp" />
	</definition>
	<definition name="success" extends="layout">
		<put-attribute name="title" value="LoginRegistration" />
		<put-attribute name="body"
			value="/WEB-INF/view/success.jsp" />
	</definition>

	<definition name="adminPage" extends="layout">
		<put-attribute name="title" value="LoginRegistration" />
		<put-attribute name="body"
			value="/WEB-INF/view/adminPage.jsp" />
	</definition>

	<definition name="userPage" extends="layout">
		<put-attribute name="title" value="LoginRegistration" />
		<put-attribute name="body"
