			value="/WEB-INF/tiles/footer.jsp" />
	</definition>
	<!-- login and user Signup -->
	<definition name="welcome" extends="layout">
		<put-attribute name="title" value="LoginRegistration" />
		<put-attribute name="body"
			value="/WEB-INF/view/welcomePage.jsp" />
	</definition>
	<definition name="login" extends="layout">
		<put-attribute name="title" value="LoginRegistration" />
		<put-attribute name="body"
			value="/WEB-INF/view/login.jsp" />
